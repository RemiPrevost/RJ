    <LinearLayout
        android:id="@+id/llProfile"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:orientation="horizontal"
        android:weightSum="3"
        android:visibility="gone">

        <ImageView
            android:id="@+id/imgProfilePic"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical"
            android:layout_marginTop="70dp"
            android:layout_weight="2" >

            <TextView
                android:id="@+id/txtName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/txtEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="18dp" />
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:src="@drawable/christ"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/christ" />

    <com.google.riosport.customTextView
        android:id="@+id/titleFrag1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layoutAnimation="@anim/fadein"
        android:text="Rio"
        android:textSize="50sp"
        android:textColor="@color/green"
        android:layout_alignTop="@+id/titleFrag2"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp" />

    <com.google.riosport.customTextView
        android:id="@+id/titleFrag2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textColor="@color/blue"
        android:layoutAnimation="@anim/fadein"
        android:text="Sport"
        android:layout_marginRight="22dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <com.google.android.gms.common.SignInButton
        android:id="@+id/sign_in_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/small_padd"/>

    <Button
        android:id="@+id/sign_out_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/sign_out_button_name"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="@dimen/small_padd"/>

    <Button
        android:id="@+id/revoke_access_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/revoke_access_button_name"
        android:enabled="false"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/small_padd"
        android:layout_marginLeft="117dp"/>

    <TextView
        android:id="@+id/sign_in_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/default_status"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/middle_padd"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/go"
        android:text="@string/go"
        style="@style/GoButton"
        android:visibility="gone"
        android:layout_alignTop="@+id/titleFrag2"
        android:paddingRight="@dimen/small_padd"
        android:paddingLeft="@dimen/small_padd"
        android:layout_centerHorizontal="true" />

</RelativeLayout>